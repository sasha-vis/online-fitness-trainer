{
	"compilerOptions": {
		"target": "es2018",
		"lib": ["ES6"],
		"module": "NodeNext",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
		"outDir": "./build",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"lib": ["esnext"],
	"ts-node": {
		"esm": true
	}
}
