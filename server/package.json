{
    "name": "server",
    "main": "src/main.ts",
    "type": "module",
    "scripts": {
        "dev": "npx nodemon --exec \"npx tsx src/main.ts\"",
        "build": "rimraf ./build && npx tsc",
        "start": "npm run build && node build/main.js",
        "copy-static": "rimraf public/* && cpx \"../client/dist/**/*\" public",
        "seed:users": "npx tsx src/scripts/seed-users.ts",
        "lint": "eslint . --ext ts,js --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write . --config ../.prettierrc",
        "format:check": "prettier --check . --config ../.prettierrc"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.27",
        "validator": "^13.15.23"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.10.1",
        "@types/validator": "^13.15.9",
        "@typescript-eslint/eslint-plugin": "^8.47.0",
        "@typescript-eslint/parser": "^8.47.0",
        "cpx": "^1.5.0",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "nodemon": "^3.1.11",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.47.0"
    }
}
